/**
 * @file
 * Default theme implementation to display a formatted colorbox image field.
 *
 * Available variables:
 * - image: A collection of image data.
 * - url: An URL the image can be linked to.
 * - attributes: Link attributes.
 *
 * Note: getting field name: item.getParent.getName
 *
 * @see template_preprocess_colorbox_formatter()
 *
 * @ingroup themeable
 */
#}

{% if entity and entity.bundle and entity.bundle == 'noticia' %}
  <div class="csc-news-image">
    <a href="{{ url }}"{{ attributes }}>{{ image }} <span class="image-news-title">{{attributes.title|raw}}</span></a>
  </div>
{% else %} 
  <a href="{{ url }}"{{ attributes }}>{{ image }}</a>
{% endif %}
